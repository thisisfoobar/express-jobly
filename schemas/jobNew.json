{
    "$schema": "https://json-schema.org/draft/2019-09/schema",
    "$id": "http://example.com/example.json",
    "type": "object",
    "required": [
        "title",
        "companyHandle"
    ],
    "properties": {
        "title": {
            "type": "string",
            "minLength": 1,
            "maxLength": 50
        },
        "companyHandle": {
            "type": "string",
            "minLength": 1,
            "maxLength": 50
        },
        "salary": {
            "type": "integer",
            "minimum": 0
        },
        "equity": {
            "type": "string",
            "pattern": "0|(0?\\.[0-9]+)"
        }
    },
    "additionalProperties": false
}